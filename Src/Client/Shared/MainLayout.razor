@inherits LayoutComponentBase
@inject IAuthorizeService authorizeService
@inject NavigationManager navigationManager

@using Blazored.Toast.Configuration

<BlazoredModal />
<BlazoredToasts Position="ToastPosition.BottomRight" Timeout="10" />

<AuthorizeView>
    <Authorized>
        <div class="sidebar">
            <NavMenu />
        </div>

        <div class="main">
            <div class="top-row px-4" style="z-index:2;">
                <button type="button" class="btn btn-link ml-md-auto" @onclick="@LogoutClick">Logout</button>
            </div>

            <div class="content ml-4 mr-4 px-4">
                @Body
            </div>
        </div>
    </Authorized>
</AuthorizeView>

@functions{

    [CascadingParameter]
    Task<AuthenticationState> AuthenticationState { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        bool isResetPasswordOrReqisterRequest = navigationManager.Uri.Contains("resetpassword") || navigationManager.Uri.Contains("register");

        if (!(await AuthenticationState).User.Identity.IsAuthenticated && !isResetPasswordOrReqisterRequest)
        {
            navigationManager.NavigateTo("/login");
        }
    }

    async Task LogoutClick()
    {
        await authorizeService.Logout();
        navigationManager.NavigateTo("/login");
    }
}